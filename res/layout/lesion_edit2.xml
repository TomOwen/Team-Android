<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Patient Name"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Scan Date: "
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/scanDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:gravity="center"
            android:text="mm/dd/yy"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/makeChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Changes to Lesion"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/green" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/lesionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesion #X"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:width="100dp" />

        <EditText
            android:id="@+id/lesionDescription"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/green" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/lesionSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size in MM"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" 
            android:width="100dp"/>

        <EditText
            android:id="@+id/lesionSize"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@color/green" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/targetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Lesion"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:width="100dp" />

        <ToggleButton
            android:id="@+id/tb_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:text="ToggleButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/lymphLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lymph Node"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" 
            android:width="100dp"/>

        <ToggleButton
            android:id="@+id/tb_lymph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:text="ToggleButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/imageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Image Online"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" 
            android:width="100dp"/>

        <ToggleButton
            android:id="@+id/tb_imageOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:onClick="OnlineClicked"
            android:text="ToggleButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/filetypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="File Type"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:width="100dp" />

        <EditText
            android:id="@+id/fileType"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            
            android:ems="10"
            android:textColor="@color/green" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/imageFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:text="Image/File Name xxxxx-mmddyy-x.jpg"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/viewImage"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:onClick="ViewLesion"
            android:src="@drawable/viewimage" />

    </LinearLayout>

</LinearLayout>